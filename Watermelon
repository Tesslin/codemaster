import java.util.*;

public class Watermelon{
    public static void main(String args[]){
        Scanner scanner=new Scanner(System.in);
        String stat="NO";
        int w=scanner.nextInt();
        if(w==1||w==2)
          System.out.println("NO");
        else{
          if(w%2==0){
            System.out.println("YES");
          }
          else
            System.out.println("NO");
        }

    }
}
